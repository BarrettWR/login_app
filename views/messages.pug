extends layout 

block content
    div(class="flex flex-col justify-center align-middle items-center p-7")
        div(class="flex flex-col w-[70vw] gap-5 p-20 pt-5 bg-white shadow-sharp border-black border-2")
            for message in messages
                div(class="flex flex-col gap-2 p-3 min-w-[300px]")
                    div(class="flex items-baseline gap-4")
                        h3(class=`text-lg text-purple-700 ${user ? '' : 'blur-[3px] select-none cursor-not-allowed'}`)=message.authorName
                        small(class=`opacity-70 ${user ? '' : 'blur-[3px] select-none cursor-not-allowed'}`) #{message.time.toLocaleDateString('en-us', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' })}
                    p=message.message
